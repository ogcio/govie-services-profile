{
  "name": "@govie-services/profile-api",
  "version": "0.0.1",
  "description": "Profile API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --watch --import tsx src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json && cp -R src/public dist/public",
    "check:formatting": "biome format",
    "fix:formatting": "biome format --write",
    "check:linting": "biome lint",
    "fix:linting": "biome lint --write",
    "test": "NODE_OPTIONS='--import tsx' vitest run --reporter junit --reporter default --coverage --outputFile=results.xml",
    "db:create": "tsx --env-file=.env ./src/migrations/scripts/create-database.ts",
    "db:drop": "tsx --env-file=.env ./src/migrations/scripts/drop-database.ts",
    "db:migrate": "tsx --env-file=.env ./src/migrations/scripts/migrate.ts",
    "db:rollback": "tsx --env-file=.env ./src/migrations/scripts/migrate.ts -- version=0",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.3",
    "@fastify/env": "^5.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/postgres": "^6.0.1",
    "@fastify/sensible": "^6.0.2",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@fastify/under-pressure": "^9.0.2",
    "@ogcio/api-auth": "^5.1.1",
    "@ogcio/building-blocks-sdk": "^0.1.14",
    "@ogcio/fastify-error-handler": "^5.1.0",
    "@ogcio/fastify-logging-wrapper": "^5.1.0",
    "@ogcio/shared-errors": "^1.0.0",
    "@sinclair/typebox": "^0.34.13",
    "close-with-grace": "^2.1.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-raw-body": "^5.0.0",
    "pg": "^8.13.1",
    "postgrator": "^8.0.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.16.0",
    "@types/http-errors": "^2.0.4",
    "@types/pg": "^8.11.10",
    "fastify-cli": "^7.1.0",
    "tsc-alias": "^1.8.10"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "authors": [
    {
      "name": "Samuele Salvatico",
      "email": "samuele.salvatico@nearform.com"
    },
    {
      "name": "Matteo La Cognata",
      "email": "matteo.lacognata@nearform.com"
    }
  ]
}
